{
  "compilerOptions": {
    "declaration": true,
    "inlineSources": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": []
  },
  "types": ["jest", "node"],
  "exclude": ["dist", "**/*.spec.tsx", "**/*.spec.ts", "**/_mocks/*.ts"]
}
