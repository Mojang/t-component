{
    "compilerOptions": {
        "declaration": true,
        "inlineSources": false,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "outDir": "dist",
        "rootDir": "src",
        "skipLibCheck": true,
        "sourceMap": false,
        "target": "es5"
    },
    "exclude": ["dist", "**/*.test.tsx", "**/*.test.ts", "**/_mocks/*.ts"]
}
